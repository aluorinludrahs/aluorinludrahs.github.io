import requests

def get_github_repo_info(repo_name):
  """Gets information about a GitHub repository.

  Args:
    repo_name: The name of the repository.

  Returns:
    A dictionary containing information about the repository, such as the name,
    description, and number of stars.
  """

  url = "https://api.github.com/repos/{}/{}".format(repo_name, repo_name)
  response = requests.get(url)
  response.raise_for_status()

  repo_info = response.json()
  return repo_info

if __name__ == "__main__":
  repo_name = input("Enter the name of the GitHub repository: ")
  repo_info = get_github_repo_info(repo_name)

  print("Name:", repo_info["name"])
  print("Description:", repo_info["description"])
  print("Number of stars:", repo_info["stargazers_count"])
